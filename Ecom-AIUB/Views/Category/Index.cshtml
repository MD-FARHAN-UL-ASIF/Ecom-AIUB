@model List<Ecom_AIUB.Models.Category>

@{
    ViewData["Title"] = "Category List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mt-5 mb-4">
        <h1>Categories</h1>
        <a href="@Url.Action("Create", "Category")" class="btn btn-primary">Add Category</a>
    </div>
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Edit", "Category", new { id = category.Id })" class="btn btn-sm btn-primary">Edit</a>
                                    <form asp-action="Delete" asp-route-id="@category.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center mt-5">
            <p>There are no categories available.</p>
            <a href="@Url.Action("Create", "Category")" class="btn btn-primary">Add Category</a>
        </div>
    }
</div>

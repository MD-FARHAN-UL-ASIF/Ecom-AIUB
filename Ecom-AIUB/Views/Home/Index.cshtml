@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Home Page";
}

<main class="overflow-hidden">
    <section class="my-5 w-100" >
        <div class="hero_slide">
            <img style="max-height: 500px;" src="~/assets/carousel/1.jpg" alt="Alternate Text" />
            <img style="max-height: 500px;" src="~/assets/carousel/2.jpg" alt="Alternate Text" />
            <img style="max-height: 500px;" src="~/assets/carousel/3.jpg" alt="Alternate Text" />
            <img style="max-height: 500px;" src="~/assets/carousel/4.jpg" alt="Alternate Text" />
            <img style="max-height: 500px;" src="~/assets/carousel/5.jpg" alt="Alternate Text" />
            <img style="max-height: 500px;" src="~/assets/carousel/6.jpg" alt="Alternate Text" />
        </div>
    </section>
    <section class="container" style="max-width: 1120px; padding: 0 3rem;">
        <h2 class="m-0 pb-3">Our <span style="color: rgb(237, 81, 25);">Popular</span> Products</h2>
        <p>
            Experience top-notch quality and style with our sought-after <br>selections. Discover a world of comfort, design, and value.
        </p>
        @if (Model.Any() && Model != null)
        {
            foreach (var categoryGroup in Model)
            {
                <div class="d-flex justify-content-between align-items-center mt-5">
                    <h3>@categoryGroup.CategoryName</h3>
                    <a class="text-decoration-none" style="color: rgb(237, 81, 25);" href="/category/products/@categoryGroup.CategoryId">View All &rarr;</a>
                </div>
                <div class="mt-3 slide_products">
                    @foreach (var product in categoryGroup.Products)
                    {
                        <div class="px-2">
                            <a href="/product/@product.Id" class="text-decoration-none">
                                <div class="card h-100 border-0">
                                    <img src="~/images/@product.Image" class="card-img-top" alt="@product.Name" />
                                    <div class="card-body">
                                        <h5 class="card-title text-black">@product.Name</h5>
                                        <p class="card-text text-black"><strong>Category:</strong> @product.Category.Name</p>
                                        <p class="card-text"><strong style="color: rgb(237, 81, 25);">@product.Price.ToString("C")</strong></p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            }
        }
        else
        {
            <p>@ViewBag.ProductMessage</p>
        }
    </section>
</main>
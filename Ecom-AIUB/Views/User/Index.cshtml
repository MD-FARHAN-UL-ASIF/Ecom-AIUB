@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container my-4">
    <h2 class="text-center mb-4">Users</h2>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Shipping Address</th>
                    <th>Post Code</th>
                    <th>City</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.LatestAddress?.ShippingAddress</td>
                        <td>@user.LatestAddress?.PostCode</td>
                        <td>@user.LatestAddress?.City</td>
                        <td>
                            <a href="@Url.Action("Details", "User", new { id = user.Id })" class="btn btn-info btn-sm">Details</a>
                            <a href="@Url.Action("Edit", "User", new { id = user.Id })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    h2 {
        color: #343a40;
    }

    .table {
        background-color: #ffffff;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }
</style>
